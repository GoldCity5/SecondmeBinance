generator client {
  provider        = "prisma-client-js"
  output          = "../src/generated/prisma"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id              String      @id @default(cuid())
  secondmeUserId  String      @unique
  name            String
  email           String?
  avatar          String?
  bio             String      @default("")
  tradingStyle    String      @default("")
  customPersona   String      @default("")
  accessToken     String
  refreshToken    String
  tokenExpiresAt  DateTime
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  portfolios      Portfolio[]
  trades          Trade[]
}

model Portfolio {
  id            String              @id @default(cuid())
  userId        String
  type          String              @default("AI") // "AI" | "MANUAL"
  user          User                @relation(fields: [userId], references: [id])
  cashBalance   Float               @default(100000)
  liquidatedAt  DateTime?
  holdings      Holding[]
  snapshots     PortfolioSnapshot[]
  trades        Trade[]
  updatedAt     DateTime            @updatedAt

  @@unique([userId, type])
}

model Holding {
  id          String    @id @default(cuid())
  portfolioId String
  portfolio   Portfolio @relation(fields: [portfolioId], references: [id])
  symbol      String
  quantity    Float
  avgCost     Float
  leverage    Int       @default(1)
  updatedAt   DateTime  @updatedAt

  @@unique([portfolioId, symbol, leverage])
}

model Trade {
  id          String    @id @default(cuid())
  userId      String
  user        User      @relation(fields: [userId], references: [id])
  portfolioId String
  portfolio   Portfolio @relation(fields: [portfolioId], references: [id])
  symbol      String
  side        String
  quantity    Float
  price       Float
  total       Float
  leverage    Int       @default(1)
  reason      String
  monologue   String    @default("")
  createdAt   DateTime  @default(now())
}

model PortfolioSnapshot {
  id            String    @id @default(cuid())
  portfolioId   String
  portfolio     Portfolio @relation(fields: [portfolioId], references: [id])
  date          String    // "2026-02-10" 格式，每天一条
  totalAssets   Float
  cashBalance   Float
  holdingsValue Float
  createdAt     DateTime  @default(now())

  @@unique([portfolioId, date])
}
